<template>
  <view class="find-iem" wx:for="{{findDetail}}" wx:for-index="idx" wx:key="{{idx}}">
    <navigator class="find-header" url="{{'sks'}}">
      <view class="find-img">
        <image mode="aspectFill" src="/images/default.png"></image>
      </view>
      <view class="find-name-tag">
        <view class="find-name">{{item.user.name}}<text class="renz-icon daka icon-yishimingrenzheng1"></text></view>
        <view class="find-tags">
          <text class="find-tag" wx:for="{{item.user.tags}}" wx:key="index">{{item}}</text>
        </view>
      </view>
      <view class="down-icon daka icon-unfold"></view>
    </navigator>
    <navigator class="find-cont" url="/pages/find/detail?id={{item.id}}">
      <view class="find-cont-text">
        <text>{{item.content}}</text>
      </view>
      <view class="find-cont-img">
        <block wx:for="{{item.images}}" wx:key="{{index}}">
          <image mode="aspectFit" src="{{item}}" data-images="{{findDetail[idx].images}}" data-image="{{item}}"></image>
        </block>
      </view>
    </navigator>
    <view class="up-time">{{item.month}}-{{item.day}}</view>
