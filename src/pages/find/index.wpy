<template>
  <view class="find-iem" wx:for="{{findDetail}}" wx:for-index="idx" wx:key="{{idx}}">
    <navigator class="find-header" url="{{'sks'}}">
      <view class="find-img">
        <image mode="aspectFill" src="/images/default.png"></image>
      </view>
      <view class="find-name-tag">
        <view class="find-name">{{item.user.name}}<text class="renz-icon daka icon-yishimingrenzheng1"></text></view>
        <view class="find-tags">
          <text class="find-tag" wx:for="{{item.user.tags}}" wx:key="index">{{item}}</text>
        </view>
      </view>
      <view class="down-icon daka icon-unfold"></view>
    </navigator>
    <navigator class="find-cont" url="/pages/find/detail?id={{item.id}}">
      <view class="find-cont-text">
        <text>{{item.content}}</text>
      </view>
      <view class="find-cont-img">
        <block wx:for="{{item.images}}" wx:key="{{index}}">
          <image mode="aspectFit" src="{{item}}" data-images="{{findDetail[idx].images}}" data-image="{{item}}"></image>
        </block>
      </view>
    </navigator>
    <view class="up-time">{{item.month}}-{{item.day}}</view>
    <view class="find-actions">
      <button open-type="share" class="action-item daka icon-fenxiang2">
        分享
      </button>
      <view class="action-item daka icon-comment">
        评论
      </view>
      <view class="action-item daka icon-appreciate">
        点赞
      </view>
      <view class="action-item daka icon-refund" @tap="play">
        打赏
      </view>
    </view>
  </view>
</template>
<script>
import wepy from "wepy";
export default class Index extends wepy.page {
  data = {
    findArray: [
      {
        user: {
          name: '追风少年',
          tags: ['模特', '演员']
        },
        cont: {
          text: `”不那么好过的日子里要学会每天给自己一个开心的理由哪怕只是阳光很暖点亮很足“
          世界晚安👄`
        }
      }, {
         user: {
          name: '追风少年',
          tags: ['模特', '演员', '歌手', '主持']
        },
        cont: {
          text: `作为一个有情怀的人，总能够写出好文章\n`
        }
      }
    ],
    findDetail: {} //动态详情
  }
  methods = {
    play() {
      wepy.requestPayment({
        'timeStamp': '12e21',
        'nonceStr': 'e21e',
        'package': 'e21e',
        'signType': 'MD5',
        'paySign': 'e12e2',
        'success':function(res) {
          wepy.showModal({
            content: '打赏成功',
            showCancel: false,
            success: function(res) {
              if (res.confirm) {
                console.log('用户点击确定')
              } else if (res.cancel) {
                console.log('用户点击取消')
              }
            }
          })
        },
        'fail':function(res) {
          console.log(res)
        }
      })
    },
    //图片预览
    preview(e) {
      console.log(e);
      const {images,image} = e.currentTarget.dataset || {};
      wx.previewImage({
        current: image,
        urls: images
      });
    }
  }

  onLoad() {
    var _this = this;
    wx.showShareMenu({
      withShareTicket: true
    });
    //开启loading
    wx.showLoading({
      title: '加载中',
      mask: true
    });
    wx.request({
      url: 'https://www.us800.cn/async!gotCareer.action', //大咖秀列表(动态)
      data: {},
      header: {
        'content-type': 'application/json' // 默认值
      },
      success: function(res) {
        //关闭loading
        wepy.hideLoading();
        console.log(res.data);
        _this.findDetail = res.data;
        //转换为图片数组
        for (var i = 0; i < _this.findDetail.length; i++) {
          _this.findDetail[i].images = _this.findDetail[i].images.split("|");
          _this.findDetail[i].content = decodeURI(_this.findDetail[i].content);
        }
        console.log(_this.findDetail);
        _this.$apply();
      },
      fail() {
        wx.hideLoading();
      }
    });
  }
}
</script>

