<script>
import wepy from "wepy";
export default class Index extends wepy.page {
  data = {
    findArray: [
      {
        user: {
          name: '追风少年',
          tags: ['模特', '演员']
        },
        cont: {  
          text: `”不那么好过的日子里要学会每天给自己一个开心的理由哪怕只是阳光很暖点亮很足“
          世界晚安👄`
        }
      }, {
         user: {
          name: '追风少年',
          tags: ['模特', '演员', '歌手', '主持']
        },
        cont: {
          text: `作为一个有情怀的人，总能够写出好文章\n`
        }
      }
    ],
    findDetail: {} //动态详情
  }
  methods = {
    //点赞
    dianzFn(e) {
      //开启loading
      wx.showLoading({
        title: '发起请求中',
        mask: true
      });
      console.log(this.$parent.globalData)
      const {id} = e.target.dataset;//动态id
      wx.request({
        url: 'https://www.us800.cn/wechat!savePoint.action',
        data: {
          memberId: 1,  //用户id
        },
        header: {
          'content-type': 'application/x-www-form-urlencoded'
        },
        success: function(res) {
          wx.hideLoading();
          wx.showToast({
            title: '点赞成功',
            icon: 'success',
            duration: 2000
          });
          console.log(res.data)
        }
      })
    }
  }

  onLoad() {
    var _this = this;
    wx.showShareMenu({
      withShareTicket: true
    });
    //开启loading
    wx.showLoading({
      title: '加载中',
      mask: true
    });
    //拉取数据
    wx.request({
      url: 'https://www.us800.cn/async!gotCareer.action', //大咖秀列表(动态)
      data: {},
      header: {
        'content-type': 'application/x-www-form-urlencoded' // 默认值
      },
      success: function(res) {
        //关闭loading
        wepy.hideLoading();
        console.log(res.data);
        _this.findDetail = res.data;
        //转换为图片数组
        for (var i = 0; i < _this.findDetail.length; i++) {
          _this.findDetail[i].images = _this.findDetail[i].images.split("|");
          _this.findDetail[i].content = decodeURI(_this.findDetail[i].content);
        }
        _this.$apply();
      },
      fail() {
        wx.hideLoading();
      }
    });
  }

  //转发设置
  onShareAppMessage (e) {
    const {id} = e.target.dataset;
    return {
      title: '这个还没写完，没得数据啊，卧槽！',
      path: `/pages/find/detail?id=${id}`,
      success: function(res) {
        // 转发成功
      },
      fail: function(res) {
        // 转发失败
      }
    }
  }
}
</script>

